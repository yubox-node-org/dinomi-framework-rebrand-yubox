[Unit]
Description=DINOMI Dashboard Monitor
After=http.target network.target remote-fs.target nss-lookup.target

[Service]
Type=simple
User=apache
Group=apache
ExecStart=/usr/bin/supervisor -w /usr/lib/node_modules/dinomi-monitor/ /usr/lib/node_modules/dinomi-monitor/dashmon_index.js
ExecStop=/bin/killall -9 node

KillSignal=SIGCONT
PrivateTmp=true

[Install]
WantedBy=multi-user.target